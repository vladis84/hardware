<div class="row">
    <input type="hidden" name="hardware[id]">
    <div class="col-md-6">
        <div class="form-group">
            <label for="address">Адрес</label>
            <input type="text"  class="form-control" id="address" name="hardware[address]">
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label for="hardware-name">Название</label>
            <input type="text"  class="form-control" id="hardware-name" name="hardware[name]">
        </div>
    </div>
</div>
<div class="param-body"></div>

<div class="row">
    <div class="col-md-3">
        <button type="button" class="btn btn-primary btn-lg js-add-param">Добавить параметр</button>
    </div>
    <div class="col-md-offset-7 col-md-2 text-right">
        <button  type="submit" class="btn btn-success btn-lg">Сохранить</button>
    </div>
</div>

<div class="row hidden param-block">
    <div class="col-md-4">
        <div class="form-group">
            <label for="param-name-id">Название поля</label>
            <textarea  class="form-control" id="param-name-id" name="hardware[params][id][name]" d></textarea>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-group">
            <label for="param-value-id">Значение поля</label>
            <textarea  class="form-control" id="param-value-id" name="hardware[params][id][value]"></textarea>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label for="param-rule-id">Права</label>
            <select class="form-control" id="param-rule-id" name="hardware[params][id][rule]">
                {% for group in usersGroup %}
                    <option value="{{ group.id }}">{{ group.name }}</option>
                {% endfor %}
            </select>
        </div>
    </div>
    <div class="col-md-2">
        <label></label>
        <button type="button" class="btn btn-danger form-control js-remove-param">
            Удалить
        </button>
    </div>
</div>
<script src="/js/hardware-edit.js"></script>
